<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/hotel_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/hotel_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hotel_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Resistentia de flavum agripeta, experientia candidatus!" />

    <TextView
        android:id="@+id/hotel_rating_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@id/hotel_name_text_view"
        app:layout_constraintStart_toStartOf="@id/hotel_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/hotel_name_text_view"
        tools:text="Bi-color, emeritis pess virtualiter gratia de lotus, placidus medicina." />

    <TextView
        android:id="@+id/hotel_address_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@id/hotel_name_text_view"
        app:layout_constraintStart_toStartOf="@id/hotel_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/hotel_rating_text_view"
        tools:text="Nobilis, grandis monss inciviliter captis de bi-color, azureus bursa." />

    <TextView
        android:id="@+id/hotel_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textColorLow"
        app:layout_constraintEnd_toEndOf="@id/hotel_address_text_view"
        app:layout_constraintStart_toStartOf="@id/hotel_address_text_view"
        app:layout_constraintTop_toBottomOf="@id/hotel_address_text_view"
        tools:text="Pol, a bene clabulare, nomen! Ubi est superbus nix? Tolerare callide ducunt ad noster impositio. Burguss velum in camerarius culina!" />

</androidx.constraintlayout.widget.ConstraintLayout>